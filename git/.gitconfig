[user]
    name = Anto Subash
    email = antosubash@live.com

[core]
    editor = vim
    autocrlf = input

[init]
    defaultBranch = main

[push]
    default = simple

[pull]
    rebase = true

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[credential "https://github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
